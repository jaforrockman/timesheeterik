<p id="notice"><%= notice %></p>

<h1>Listing Sheets</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Client</th>
      <th>Activity</th>
      <th>Omschrijving</th>
      <th>Uur</th>
      <th>Minuten</th>
      <th>Antal</th>
      <th>Opmerking intern</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheets.each do |sheet| %>
      <tr>
        <td><%= sheet.date %></td>
        <td><%= sheet.client_id %></td>
        <td><%= sheet.activity_id %></td>
        <td><%= sheet.omschrijving %></td>
        <td><%= sheet.uur %></td>
        <td><%= sheet.minuten %></td>
        <td><%= sheet.antal %></td>
        <td><%= sheet.opmerking_intern %></td>
        <td><%= link_to 'Show', sheet %></td>
        <td><%= link_to 'Edit', edit_sheet_path(sheet) %></td>
        <td><%= link_to 'Destroy', sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

